generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  surname String
  email String @unique
  password String
  admin Boolean
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  color String
  photos String[]
  Dimensions Float[]
  category String
  price Float
  discount Boolean
  discountedPrice Float?
  quantity Int
}
